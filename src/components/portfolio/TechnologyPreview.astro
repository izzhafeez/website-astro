---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { technology } = Astro.props;
const imgPath = `/src/img/portfolio/technologies/${technology.key}.svg`;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/img/portfolio/technologies/*.svg");
---
<div id={technology.key} class='reveal load-hidden flex gap-3 justify-items-center text-center'>
  <Image alt={technology.key} class="h-20 w-20 aspect-square object-cover bg-gray-100 rounded-full p-1" src={images[imgPath]()} width="100" height="100"/>
  <div class="my-auto text-left">
    <h2 class="">{technology.title}</h2>
    <desc class="text-sm text-gray-500">{technology.description}</desc>
  </div>
</div>