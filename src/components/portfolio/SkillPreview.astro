---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { skill, isEager } = Astro.props;
const imgPath = `/src/img/portfolio/skills/${skill.key}.svg`;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/img/portfolio/skills/*.svg");
---
<div id={skill.key} class='reveal load-hidden grid gap-3 justify-items-center text-center'>
  <Image alt={skill.key} class="h-20 w-20 aspect-square object-cover bg-white rounded-xl p-2" src={images[imgPath]()} width="100" height="100" loading={isEager ? "eager" : "lazy"}/>
  <h2 class="">{skill.title}</h2>
</div>