---
import { Image } from "astro:assets";

const { skill, isEager } = Astro.props;
const imgPath = `/img/portfolio/skills/${skill.key}.svg`;
---
<div id={skill.key} class='grid gap-3 justify-items-center text-center'>
  <Image alt={skill.key} class="h-20 w-20 aspect-square object-cover bg-white rounded-xl p-2" src={imgPath} width="100" height="100" loading={isEager ? "eager" : "lazy"}/>
  <h2 transition:name={skill.key} class="text-ew-500 dark:text-ew-300">{skill.title}</h2>
</div>