---
import { Image } from "astro:assets";
import svelte from '/src/img/portfolio/skills/svelte.svg';
import astro from '/src/img/portfolio/skills/astro.svg';
import tailwind from '/src/img/portfolio/skills/tailwind.svg';
import preact from '/src/img/portfolio/skills/preact.svg';
import flask from '/src/img/portfolio/skills/flask.svg';
import openlayers from '/src/img/portfolio/skills/openlayers.svg';
import koyeb from '/src/img/portfolio/skills/koyeb.svg';
import vue from '/src/img/portfolio/skills/vue.svg';
import mongo from '/src/img/portfolio/skills/mongo-db.svg';
import fastapi from '/src/img/portfolio/skills/fastapi.svg';
import react from '/src/img/portfolio/skills/react.svg';
import typescript from '/src/img/portfolio/skills/typescript.svg';
import javascript from '/src/img/portfolio/skills/javascript.svg';
import go from '/src/img/portfolio/skills/go.svg';

const { site } = Astro.props;
---
<footer class={`h-20 w-screen border-gray-500/50 flex items-center p-4`}>
  <div class="ms-auto flex gap-2">
    {site === 'portfolio' && <Image src={preact} class="h-8 hover:opacity-50" alt="Preact" width="25" height="25"/>}
    {site === 'quizzes' && <Image src={svelte} class="h-8 hover:opacity-50" alt="Svelte" width="25" height="25"/>}
    {site === 'apps' && <Image src={vue} class="h-8 hover:opacity-50" alt="Vue" width="25" height="25"/>}
    {site === 'games' && <Image src={react} class="h-8 hover:opacity-50" alt="React" width="25" height="25"/>}
    {site === 'home' && <Image src={astro} class="h-8 hover:opacity-50" alt="Astro" width="25" height="25"/>}
    {site === 'home' && <Image src={tailwind} class="h-8 hover:opacity-50" alt="Tailwind" width="25" height="25"/>}
    {['quizzes', 'apps'].includes(site) && <Image src={openlayers} class="h-8 hover:opacity-50" alt="OpenLayers" width="25" height="25"/>}
    {site === 'quizzes' && <Image src={flask} class="h-8 hover:opacity-50 dark:invert" alt="Flask" width="25" height="25"/>}
    {site === 'apps' && <Image src={fastapi} class="h-8 hover:opacity-50" alt="FastAPI" width="25" height="25"/>}
    {site === 'apps' && <Image src={mongo} class="h-8 hover:opacity-50" alt="MongoDB" width="25" height="25"/>}
    {site === 'games' && <Image src={go} class="h-8 hover:opacity-50" alt="Go" width="25" height="25"/>}
    {site === 'games' && <Image src={typescript} class="h-8 hover:opacity-50" alt="TypeScript" width="25" height="25"/>}
    {site === 'blog' && <Image src={javascript} class="h-8 hover:opacity-50" alt="TypeScript" width="25" height="25"/>}
    {['quizzes', 'apps', 'games'].includes(site) && <Image src={koyeb} class="h-8 hover:opacity-50 dark:invert" alt="Koyeb" width="25" height="25"/>}
  </div>
</footer>