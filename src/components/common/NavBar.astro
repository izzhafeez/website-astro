---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
} from "astro-navbar";
import ThemeIcon from "./ThemeIcon.astro";
import { Image } from "astro:assets";
import logo from '../../img/desmosito-black-trans.png';
// https://github.com/surjithctly/astro-navbar?tab=readme-ov-file
---
<header class="lg:flex justify-between p-5 gap-5 mx-auto container dark:text-white bg-li-bg dark:bg-da-bg z-50">
  <Astronav closeOnClick>
    <div class="flex w-full lg:w-auto justify-between items-center">
      <a href="/"><Image src={logo} alt="logo" width="20" height="20" class="dark:invert w-6 h-6"/></a>
      <div class="lg:hidden grid items-center">
        <MenuIcon class="w-6 h-6 text-gray-800 dark:invert" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex gap-2 flex-col lg:flex-row lg:gap-5 mt-4 lg:mt-0">
        <li>
          <Dropdown class="group">
            <button class="flex gap-2 items-center rounded-lg hover:bg-gray-100 dark:hover:bg-da-alt px-2">
              <span class="">Apps</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative z-50">
              <div
                class="lg:absolute bg-gray-100 dark:bg-da-alt top-2 w-40 rounded-lg right-0 py-2 mt-2">
                <ul class="grid">
                  <a href="/apps/meetupmaker" class="hover:bg-ew-500 px-2 py-1 hover:text-white">MeetupMaker</a>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <Dropdown class="group">
            <button class="flex gap-2 items-center rounded-lg hover:bg-gray-100 dark:hover:bg-da-alt px-2">
              <span class="">Quizzes</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative z-50">
              <div
                class="lg:absolute bg-gray-100 dark:bg-da-alt top-2 w-40 rounded-lg right-0 py-2 mt-2">
                <ul class="grid">
                  <a href="/quizzes/map" class="hover:bg-ns-500 px-2 py-1 hover:text-white">Map</a>
                  <a href="/quizzes/streak" class="hover:bg-ns-500 px-2 py-1 hover:text-white">Streak</a>
                  <a href="/quizzes/compare" class="hover:bg-ns-500 px-2 py-1 hover:text-white">Compare</a>
                  <a href="/quizzes/geoguessr" class="hover:bg-ns-500 px-2 py-1 hover:text-white">GeoGuessr</a>
                  <a href="/quizzes/yes-no" class="hover:bg-ns-500 px-2 py-1 hover:text-white">Yes/No</a>
                  <a href="/quizzes/selection" class="hover:bg-ns-500 px-2 py-1 hover:text-white">Selection</a>
                  <a href="/quizzes/connect" class="hover:bg-ns-500 px-2 py-1 hover:text-white">Connect</a>
                  <a href="/quizzes/match" class="hover:bg-ns-500 px-2 py-1 hover:text-white">Match</a>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <Dropdown class="group">
            <button class="flex gap-2 items-center rounded-lg hover:bg-gray-100 dark:hover:bg-da-alt px-2">
              <span class="">Portfolio</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative z-50">
              <div
                class="lg:absolute bg-gray-100 dark:bg-da-alt shadow top-2 w-40 rounded-lg right-0 py-2 mt-2">
                <ul class="grid">
                  <a href="/portfolio/art" class="hover:bg-ne-500 px-2 py-1 hover:text-white">Art</a>
                  <a href="/portfolio/courses" class="hover:bg-ne-500 px-2 py-1 hover:text-white">Courses</a>
                  <a href="/portfolio/experience" class="hover:bg-ne-500 px-2 py-1 hover:text-white">Experience</a>
                  <a href="/portfolio/music" class="hover:bg-ne-500 px-2 py-1 hover:text-white">Music</a>
                  <a href="/portfolio/projects" class="hover:bg-ne-500 px-2 py-1 hover:text-white">Projects</a>
                  <a href="/portfolio/skills" class="hover:bg-ne-500 px-2 py-1 hover:text-white">Skills</a>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li class="grid items-center">
          <ThemeIcon/>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>