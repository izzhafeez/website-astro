---
import { capitalise } from "../../utils/string";

const { key, value, site } = Astro.props;

let neon = 'hover:neon-lrt';
let text = '';
switch (site) {
  case 'portfolio':
    neon = 'hover:neon-ew';
    text = 'group-hover:text-ew-500 dark:group-hover:text-ew-300';
    break;
}
---
<a href={`/${site}/${key}`} role="button" class={`${neon} p-4 rounded-lg group`}>
  <h2 class={`font-medium dark:text-white ${text}`}>{capitalise(key)}</h2>
  <p class="text-gray-500 text-sm">{value.heroText}</p>
</a>