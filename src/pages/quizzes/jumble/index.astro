---
import jumbleData from "../../../data/quizzes/jumble.json";
import MediumCard from "../../../components/common/MediumCard.astro";
import Layout from "../../../layouts/Layout.astro";
import NavBar from "../../../components/common/NavBar.astro";
import Hero from "../../../components/common/Hero.astro"
import Footer from "../../../components/common/Footer.astro"
import Seo from "../../../components/seo/Seo.astro";
import quizzesData from "../../../data/quizzes/quizzes.json";
import seoImg from '/src/img/heroes/JUMBLE.jpg';

type QuizJson = {[k: string]: {
  title: string,
  instructions: string,
  rank?: number,
  tags?: string[]
}}

const quizzes = Object.entries(jumbleData as QuizJson).map(([key, value]) => {
  return {
    key,
    href: `/quizzes/jumble/${key}`,
    title: value.title,
    instructions: value.instructions,
    rank: value.rank || 0,
    imgPath: key === "all" ? `/img/heroes/JUMBLE.jpg` : `/img/quizzes/jumble/${key}.jpg`,
    tags: value.tags || []
  }
}).sort((a,b) => a.title.localeCompare(b.title));

const heroText = quizzesData.jumble.heroText;
const title = quizzesData.jumble.title;
---
<Seo {heroText} pageName={"Jumble Quizzes"} path={`quizzes/jumble`}/>

<Layout>
  <div slot="main" class="min-h-screen h-auto flex flex-col">
    <NavBar/>
    <Hero label={title} text={heroText} site="quizzes"/>
    <section class="my-auto grid grid-cols-1 lg:grid-cols-2 gap-2 relative px-2 mt-2 max-w-6xl mx-auto">
      {quizzes.map(quiz => <MediumCard
        href={quiz.href}
        title={quiz.title}
        site="quizzes"
        heroText={quiz.instructions}
        key={quiz.key}
        imgPath={quiz.imgPath}
        isEager={true}
        tags={quiz.tags}/>)}
    </section>
    <Footer site="quizzes"/>
  </div>
</Layout>