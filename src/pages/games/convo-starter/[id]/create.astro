---
import NavBar from "../../../../components/common/NavBar.astro";
import ConvoStarterGameCreate from "../../../../components/games/convo-starter/ConvoStarterGameCreate";
import CoolBackground, {Color} from "../../../../components/common/CoolBackground";
import Layout from "../../../../layouts/Layout.astro";
import Seo from "../../../../components/seo/Seo.astro";
import seoImg from '/src/img/heroes/MATH-ATTACK.jpg';
import gamesData from "../../../../data/games/games.json";
export const prerender = false;
const { id } = Astro.params;
const heroText = gamesData["convo-starter"].heroText;
---

<Seo {heroText} {seoImg} pageName={'Convo Starter'} path={`games/convo-starter/${id}/create`}/>

<Layout>
  <div slot="main" class="min-h-screen h-auto flex flex-col bg-dt-700">
    <NavBar withDarkMode={false}/>
    <CoolBackground client:only="react" color={Color.DT}/>
    <div class="z-10 fixed w-screen h-screen grid place-items-center overflow-scroll py-20">
      <ConvoStarterGameCreate client:only="react" id={id || ""}/>
    </div>
  </div>
</Layout>