---
import RoomCreate from "../../../components/games/common/RoomCreate";

const { title, heroText } = Astro.props;
---

<div class="mt-40 text-center">
  <h1 class="animate-linear bg-[length:200%_auto] bg-gradient-to-r from-dt-500 to-dt-300 text-transparent bg-clip-text text-6xl font-extrabold my-4 inline-block">{title}</h1>
  <p class="max-w-3xl mx-auto mb-4 "><span class="text-dt-500 dark:text-dt-200 font-bold"></span> {heroText}</p>
  <RoomCreate client:only="react"/>
</div>