---
import streakData from "../../../data/gqmaster/streak.json";
import SmallCard from "../../../components/common/SmallCard.astro";
import Layout from "../../../layouts/Layout.astro";
import NavBar from "../../../components/common/NavBar.astro";
import Hero from "../../../components/common/Hero.astro"
import Footer from "../../../components/common/Footer.astro"

type QuizJson = {[k: string]: {
  title: string,
  instructions: string,
  rank?: number
}}

const quizzes = Object.entries(streakData as QuizJson).map(([key, value]) => {
  return {
    href: `/gqmaster/streak/${key}`,
    title: value.title,
    instructions: value.instructions,
    rank: value.rank || 0
  }
}).sort((a,b) => -a.rank + b.rank);
---

<Layout>
  <div slot="main">
    <NavBar/>
    <Hero label="STREAK QUIZZES" text="Here are my map quizzes, powered by OpenLayers. As you answer, the marker will disappear. Use regex to select the locations you want to include in the quiz." site="gqmaster"/>
    <section class="grid grid-cols-1 lg:grid-cols-2 gap-2 relative px-2 mt-2 max-w-6xl mx-auto">
      {quizzes.map(quiz => <SmallCard href={quiz.href} title={quiz.title} site="gqmaster" heroText={quiz.instructions}/>)}
    </section>
    <Footer color="ns"/>
  </div>
</Layout>