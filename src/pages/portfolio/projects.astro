---
import Layout from '../../layouts/Layout.astro';
import NavBar from '../../components/common/NavBar.astro';
import Hero from '../../components/common/Hero.astro';
import projectsData from '../../data/portfolio/projects.json';
import ProjectPreview from '../../components/portfolio/ProjectPreview.astro';
import Footer from '../../components/common/Footer.astro';
import { toName } from '../../utils/string';
import portfolioData from '../../data/portfolio/portfolio.json';
import { AstroSeo } from '@astrolib/seo';

interface ProjectData {
  title?: string,
  repo?: string,
  overview?: string,
  related?: string[],
  imgPath?: string,
  link?: string,
  rank?: number
}

type ProjectJson = {[key: string]: ProjectData };

const projects = Object.entries(projectsData as ProjectJson).map(([key, value]) => {
  return {
    key,
    title: value.title || toName(key),
    repo: value.repo,
    link: value.link,
    overview: value.overview,
    imgPath: value.imgPath,
    rank: value.rank ?? 0,
    related: value.related ?? []
  }
}).sort((a,b) => -a.rank + b.rank);

const heroText = portfolioData.projects.heroText;
---
<AstroSeo
  title="Projects | Izz Hafeez"
  description={heroText}
  canonical="https://izzhafeez.com/portfolio/projects"
  openGraph={{
    title: "Projects | Izz Hafeez",
    description: heroText,
    url: "https://izzhafeez.com/portfolio/projects",
    type: "website",
    images: [
      {
        url: "/img/heroes/PROJECTS.jpg",
        width: 800,
        height: 600,
        alt: "Projects | Izz Hafeez"
      }
    ]
  }}
/>
<Layout>
  <div slot="main" class="">
    <NavBar/>
    <Hero label="PROJECTS" text={heroText} site="portfolio"/>
    <section class="grid grid-cols-1 gap-2 relative p-2 max-w-6xl mx-auto" transition:animate="slide">
      {projects.map(project => <ProjectPreview project={project}/>)}
    </section>
    <Footer color="ew"/>
  </div>
</Layout>