---
import Layout from '../../layouts/Layout.astro';
import NavBar from '../../components/common/NavBar.astro';
import Footer from '../../components/common/Footer.astro';
import portfolioData from '../../data/portfolio/portfolio.json';
import Hero from '../../components/common/Hero.astro';
import homeJson from '../../data/home.json';
import MediumCard from '../../components/common/MediumCard.astro';
import { capitalise } from '../../utils/string';
import seoImg from '../../img/heroes/PORTFOLIO.jpg';
import Seo from '../../components/seo/Seo.astro';

const heroText = homeJson.portfolio.heroText;
---
<Seo {heroText} {seoImg} pageName={"Portfolio"} path="portfolio"/>

<Layout>
  <div slot="main" class="min-h-screen h-auto flex flex-col">
    <NavBar/>
    <Hero label="PORTFOLIO" text={heroText} site="portfolio"/>
    <section class="my-auto grid grid-cols-1 lg:grid-cols-2 gap-2 relative px-2 mt-2 max-w-6xl mx-auto">
      {Object.entries(portfolioData).map(([key, value]) => <MediumCard href={`/portfolio/${key}`} title={capitalise(key)} heroText={value.heroText} site="portfolio" imgPath={`/img/heroes/${key.toUpperCase()}.jpg`} isEager={true}/>)}
    </section>
    <Footer site="portfolio"/>
  </div>
</Layout>
