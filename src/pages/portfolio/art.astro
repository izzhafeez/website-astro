---
import Layout from '../../layouts/Layout.astro';
import artData from '../../data/portfolio/art.json';
import { toName } from '../../utils/string';
import ArtPreview from '../../components/portfolio/ArtPreview.astro';
import Hero from '../../components/common/Hero.astro';
import NavBar from '../../components/common/NavBar.astro';
import Footer from '../../components/common/Footer.astro';
import portfolioData from '../../data/portfolio/portfolio.json';
import { AstroSeo } from "@astrolib/seo";

export interface ArtData {
  link: string,
  rank?: number
}

type ArtJson = {[key: string]: ArtData};

const artworks = Object.entries(artData as ArtJson).map(([key, value]) => {
  return {
    key,
    imgPath: `/img/portfolio/art/${key}.png`,
    name: toName(key),
    link: value.link,
    rank: value.rank ?? 0
  }
}).sort((a,b) => -a.rank + b.rank);

const heroText = portfolioData.art.heroText;
//<h1 class="font-extrabold text-transparent bg-clip-text text-5xl mt-20 bg-gradient-to-r from-ew-500 to-ew-300 dark:from-ew-500 dark:to-white my-4 inline-block">ARTWORK</h1>
---
<AstroSeo
  title="Artwork | Izz Hafeez"
  description={heroText}
  canonical="https://izzhafeez.com/portfolio/art"
  openGraph={{
    title: "Artwork | Izz Hafeez",
    description: heroText,
    url: "https://izzhafeez.com/portfolio/art",
    type: "website",
    images: [
      {
        url: "/img/heroes/ART.jpg",
        width: 600,
        height: 600,
        alt: "Artwork | Izz Hafeez"
      }
    ]
  }}
/>
<Layout>
  <div slot="main" class="">
    <NavBar/>
    <Hero label="ART" text={heroText} site="portfolio"/>
    <section class="grid grid-cols-2 md:grid-cols-3 gap-2 relative p-2 max-w-6xl mx-auto mt-4" transition:animate="slide">
      {artworks.slice(0,15).map(artwork => <ArtPreview artwork={artwork} isEager={true}/>)}
      {artworks.slice(15).map(artwork => <ArtPreview artwork={artwork}/>)}
    </section>
    <Footer color="ew"/>
  </div>
</Layout>