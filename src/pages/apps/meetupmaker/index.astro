---
import { Image } from "astro:assets";
import NavBar from "../../../components/common/NavBar.astro";
import Layout from "../../../layouts/Layout.astro";
import github from "/src/img/logos/github.svg";
import Footer from "../../../components/common/Footer.astro";

export const prerender = true;
---

<Layout>
  <div slot="main" class="min-h-screen h-auto flex flex-col">
    <NavBar/>
    <div class="max-w-xl mx-auto mt-20 place-content-center my-auto">
      <h1 class="text-6xl text-center font-extrabold bg-gradient-to-r from-ew-500 to-ew-300 dark:from-ew-500 dark:to-ew-100 text-transparent bg-clip-text inline-block">
        Plan your meetups with ease.
      </h1>
      <p class="text-center mt-8 dark:text-white">MeetupMaker makes it easier to decide on a meetup time and location. Just create a meetup, invite people, and let the recommender handle the rest!</p>
      <div class="flex justify-center mt-8 gap-4">
        <a href="/apps/meetupmaker/create" type="button" class="bg-ew-400 hover:bg-ew-600 text-white py-2 px-4 rounded-md">
          Get Started
        </a>
        <a href="https://github.com/izzhafeez/mmaker" type="button" class="bg-gray-100 dark:bg-da-alt hover:bg-gray-300 dark:hover:bg-gray-500 dark:text-white py-2 px-4 rounded-md flex gap-2 content-center">
          <Image src={github} class="brightness-0 dark:invert my-auto" alt="LinkedIn" width="15" height="15"/> View Repository
        </a>
      </div>
    </div>
    <Footer site="apps"/>
  </div>
</Layout>